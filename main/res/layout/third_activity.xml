<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/my_back" android:padding="8dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textColor="#edecec"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You could have made"
        android:id="@+id/you_could_have_made" android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent" android:layout_below="@+id/you_could_have_made" android:id="@+id/word" android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content" android:id="@+id/holder" android:orientation="horizontal" android:layout_gravity="center"
            android:layout_height="wrap_content">
        <Button android:textColor="#fff" android:layout_marginRight="7dp" android:textSize="35dp" android:textStyle="bold"
            android:layout_width="55dp"
            android:clickable="false" android:background="@drawable/rr"
            android:layout_height="55dp"
            android:id="@+id/h_you" />

            <Button android:textColor="#fff" android:layout_marginRight="7dp"  android:textSize="35dp" android:textStyle="bold"
                android:layout_width="55dp"
                android:clickable="false" android:background="@drawable/rr"
                android:layout_height="55dp"
                android:id="@+id/a_you" />
            <Button android:textColor="#fff" android:layout_marginRight="4dp"  android:textSize="35dp" android:textStyle="bold"
                android:layout_width="55dp"
                android:clickable="false" android:background="@drawable/rr"
                android:layout_height="55dp"
                android:id="@+id/r_you" />
            <Button android:textColor="#fff"   android:textSize="35dp" android:textStyle="bold" android:layout_marginLeft="4dp"
                android:layout_width="55dp"
                android:clickable="false" android:background="@drawable/rr"
                android:layout_height="55dp"
                android:id="@+id/p_you" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#edecec" android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="3 words possible"
        android:id="@+id/but_your_efforts"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/word" />
    <View
        android:layout_width="300dp" android:foregroundGravity="center_horizontal"
        android:layout_height="2dp" android:background="#0099cc"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/but_your_efforts"
        android:layout_centerHorizontal="true"
        android:id="@+id/view_custom"></View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#edecec"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You Scored"
        android:id="@+id/you_scored_text"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="47"
        android:textSize="45dp"
        android:id="@+id/score_made"
        android:layout_below="@+id/you_scored_text"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/home" android:clickable="true" android:onClick="GoHome"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp" android:onClick="PlayAgain"
        android:id="@+id/restart_game"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:visibility="invisible"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="New best!!!" android:textStyle="bold"
        android:id="@+id/new_best" android:textColor="#fff"
        android:layout_below="@+id/score_made"
        android:layout_centerHorizontal="true" />

</RelativeLayout>